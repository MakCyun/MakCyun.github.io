    text-decoration: none;
}


// 阅读原文格式
.post-button .btn {
    color: #555;
    font-size: 14px;
    background: #fff;
    border: 2px solid #555;
    border-radius: 2px;
    line-height: 2;
    margin: 0 4px 8px 4px;
}
.btn {
    display: inline-block;
    padding: 0 20px;
    border: 2px solid #555;
    text-decoration: none;
    transition-property: background-color;
    transition-duration: 0.2s;
    transition-timing-function: ease-in-out;
    transition-delay: 0s;
}


